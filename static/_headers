/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Allow social media crawlers for all pages - NO user-agent discrimination
/*
  X-Robots-Tag: index, follow
  Vary: Accept-Encoding

# Blog pages - ensure social crawlers can access
/blog/*
  X-Robots-Tag: index, follow
  Cache-Control: public, max-age=0, must-revalidate

# Ensure images are accessible to social media crawlers
/static/*
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *
  X-Robots-Tag: noindex, nofollow

# Specific handling for social media images
/static/*.jpg
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *
  Content-Type: image/jpeg

/static/*.png
  Cache-Control: public, max-age=31536000
  Access-Control-Allow-Origin: *
  Content-Type: image/png
